<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonPagerTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/pager_tab"
        app:layout_constraintBottom_toTopOf="@+id/buttonTabHost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonTabHost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tab_host"
        app:layout_constraintTop_toBottomOf="@+id/buttonPagerTab"
        app:layout_constraintBottom_toTopOf="@+id/buttonFragmentTabHost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonFragmentTabHost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_tab_host"
        app:layout_constraintTop_toBottomOf="@+id/buttonTabHost"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>